@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <NavLink href="https://learn.microsoft.com/aspnet/core/" class="nav-link" Match="NavLinkMatch.All" target="_blank">Blazor Docs</NavLink>
            <NavLink href="/" class="nav-link" Match="NavLinkMatch.All">Home</NavLink>
            <NavLink href="/Demo/Counter" class="nav-link" Match="NavLinkMatch.All">Counter</NavLink>
            <NavLink href="/Demo/Weather" class="nav-link" Match="NavLinkMatch.All">Weather</NavLink>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
